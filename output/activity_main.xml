<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="50dp">
    <Button android:id="@+id/playSampleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onButtonPressed"
        android:text="Play 1" />
    <Button android:id="@+id/playAllInstrumentsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onButtonPressed"
        android:text="Play 2" />
    <TextView
        android:id="@+id/currentInstrumentTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Waiting for instrument" />
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:fillViewport="true">
        <TextView
            android:id="@+id/allInstrumentsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>
</LinearLayout>